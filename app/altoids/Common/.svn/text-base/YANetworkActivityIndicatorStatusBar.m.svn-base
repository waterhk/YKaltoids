#import "YANetworkActivityIndicatorStatusBar.h"

@implementation YANetworkActivityIndicatorStatusBar

@synthesize app = app_;

- (void)showNetworkActivityIndicatorStatusBar
{
    [app_ setNetworkActivityIndicatorVisible:YES];
}

- (void)hideNetworkActivityIndicatorStatusBar
{
    [app_ setNetworkActivityIndicatorVisible:NO];
}

@end